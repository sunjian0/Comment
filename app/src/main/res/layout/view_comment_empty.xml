<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivNull"
        android:layout_width="@dimen/dp230"
        android:layout_height="@dimen/dp230"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dp7"
        android:paddingTop="@dimen/dp25"
        android:paddingRight="@dimen/dp7"
        android:paddingBottom="@dimen/dp18"
        android:src="@mipmap/ic_no_net"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvNull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivNull"
        android:layout_marginTop="@dimen/dp15"
        android:gravity="center_horizontal"
        android:text="还没有人评论过呢，\n快来发布第一条评论吧~"
        android:textColor="@color/color_992c2c2c"
        android:textSize="@dimen/sp14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivNull"/>

</androidx.constraintlayout.widget.ConstraintLayout>