<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="7dp">

    <View
        android:id="@+id/more_viewLine"
        android:layout_width="@dimen/dp19"
        android:layout_height="@dimen/dp1"
        android:layout_marginStart="@dimen/dp74"
        android:background="@color/color_D8D8D8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/more_layoutOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/more_viewLine"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/more_tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:gravity="center"
            android:textColor="@color/color_b22c2c2c"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/more_ivMore"
            android:layout_width="@dimen/dp7"
            android:layout_height="@dimen/dp4"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            android:src="@mipmap/ic_more_open"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/more_tvMore"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_layoutClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp112"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/more_viewLine"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/more_tvClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_b22c2c2c"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/viewLine"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/more_ivClose"
            android:layout_width="@dimen/dp7"
            android:layout_height="@dimen/dp4"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            android:src="@mipmap/ic_more_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/more_tvMore"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>